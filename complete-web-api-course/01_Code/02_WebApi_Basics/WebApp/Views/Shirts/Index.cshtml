@model List<Shirt>

@{
  ViewData["Title"] = "Shirts";
}

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      @if (TempData["SuccessMessage"] != null)
      {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          @TempData["SuccessMessage"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }

      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Shirts Collection</h2>
        <a asp-action="CreateShirt" class="btn btn-primary">Create New Shirt</a>
      </div>

      @if (Model != null && Model.Any())
      {
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Brand</th>
                <th>Color</th>
                <th>Size</th>
                <th>Gender</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var shirt in Model)
              {
                <tr>
                  <td>@shirt.ShirtId</td>
                  <td>@shirt.Brand</td>
                  <td>@shirt.Color</td>
                  <td>@(shirt.Size?.ToString() ?? "N/A")</td>
                  <td>@shirt.Gender</td>
                  <td>@(shirt.Price?.ToString("C") ?? "N/A")</td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      }
      else
      {
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No Shirts Available</h4>
          <p>There are currently no shirts in the collection.</p>
        </div>
      }
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <a asp-controller="Shirts" asp-action="CreateShirt" class="btn btn-primary mt-3">Add Shirt</a>
    </div>
  </div>
</div>
