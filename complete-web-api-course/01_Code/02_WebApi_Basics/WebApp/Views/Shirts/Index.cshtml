@model List<Shirt>

@{
  ViewData["Title"] = "Shirts";
}

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h2>Shirts Collection</h2>

      @if (Model != null && Model.Any())
      {
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Brand</th>
                <th>Color</th>
                <th>Size</th>
                <th>Gender</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var shirt in Model)
              {
                <tr>
                  <td>@shirt.ShirtId</td>
                  <td>@shirt.Brand</td>
                  <td>@shirt.Color</td>
                  <td>@(shirt.Size?.ToString() ?? "N/A")</td>
                  <td>@shirt.Gender</td>
                  <td>@(shirt.Price?.ToString("C") ?? "N/A")</td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      }
      else
      {
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No Shirts Available</h4>
          <p>There are currently no shirts in the collection.</p>
        </div>
      }
    </div>
  </div>
</div>
